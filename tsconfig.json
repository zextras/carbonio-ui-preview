{
	"extends": "@zextras/carbonio-ui-configs/rules/typescript.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "es5",
		"lib": ["es2015", "dom"],
		"outDir": "lib",
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"test-utils": ["./utils/test-utils"]
		},
		"types": ["@testing-library/jest-dom"],
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["./node_modules/*", "src/**/*.test.*", "src/**/test*"],
	"ts-node": {
		"transpileOnly": true
	}
}
